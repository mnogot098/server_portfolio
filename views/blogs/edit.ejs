<%- include('../layout/header.ejs') %>
<div class="container">
  <h1 class="my-4 text-center">Edit blog</h1>
</div>
<div class="container my-6">
    <div class="row">
            <form action="<%= blog.id %>/save" method="POST">
              <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">Title</label>
                <input
                name="title"
                  type="text"
                  value="<%= blog.title %>"
                  class="form-control col-12"
                  id="exampleInputEmail1"
                />
              </div>
              <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">Link url</label>
                <input
                name="link_url"
                  type="text"
                  value="<%= blog.link_url%>"
                  class="form-control col-12"
                  id="exampleInputEmail1"
                />
              </div>
              <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">Description</label>
                <textarea
                name="description"
                  class="form-control col-12"
                  id="exampleInputEmail1"
                >
                <%= blog.description %>
            </textarea>
              </div>
              <button type="submit" class="btn btn-success">Edit blog</button>
            </form>
    </div>

</div>
<%- include('../layout/footer.ejs') %>
