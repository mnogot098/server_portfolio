<%- include('../layout/header.ejs') %>
<div class="container">
  <h1 class="my-4 text-center">Manage Experiences</h1>
</div>
 <div class="container">
  <button class="btn btn-success my-4">Add experience</button>
 </div>
<div class="container">
  <table class="table table-bordered">
    <thead>
      <tr>
        <th scope="col">Company</th>
        <th scope="col">Title</th>
        <th scope="col">Duration</th>
        <th scope="col">Description</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% experiences.forEach(function(experience) { %>
      <tr>
        <td><%= experience.company %></td>
        <td><%= experience.title %></td>
        <td><%= experience.duration %></td>
        <td><%= experience.description %></td>
        <td>
          <button
            class="btn btn-info show-details text-white"
            data-bs-toggle="modal"
            data-bs-target="#show-modal"
            data-title="<%= experience.title %>"
            data-company="<%= experience.company %>"
            data-duration="<%= experience.duration %>"
            data-description="<%= experience.description %>"
          >
            Show
          </button>
          <button class="btn btn-warning text-white">
            <a
              href="experiences/edit/<%= experience.id %>"
              class="text-white text-decoration-none"
              >Edit</a
            >
          </button>
          <button
            class="btn btn-danger text-white delete-experience-button"
            data-bs-toggle="modal"
            data-bs-target="#delete-modal"
            data-experience-id="<%= experience.id %>"
          >
            Delete
          </button>
        </td>
      </tr>
      <% }); %>
    </tbody>
  </table>
</div>

