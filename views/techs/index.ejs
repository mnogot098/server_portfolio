<%- include('../layout/header.ejs') %>
<div class="container">
  <h1 class="my-4 text-center">Manage Techs</h1>
</div>
 <div class="container">
  <button class="btn btn-success my-4 "><a
    href="techs/add"
    class="text-white text-decoration-none"
    >Add tech</a</button>
 </div> 
<div class="container">
  <table class="table table-bordered">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Link</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% techs.forEach(function(tech) { %>
      <tr>
        <td><%= tech.name %></td>
        <td><%= tech.link %></td>
        <td>
          <button class="btn btn-warning text-white">
            <a
              href="techs/edit/<%= tech.id %>"
              class="text-white text-decoration-none"
              >Edit</a
            >
          </button>
          <button
  class="btn btn-danger text-white delete-tech-button"
   data-bs-toggle="modal"
  data-bs-target="#delete-modal"
  data-tech-id="<%= tech.id %>"
>
  Delete
</button>

        </td>
      </tr>
      <% }); %>
    </tbody>
  </table>
</div>

