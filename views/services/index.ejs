<%- include('../layout/header.ejs') %>
<div class="container">
  <h1 class="my-4 text-center">Manage services</h1>
</div>
<div class="container">
  <button class="btn btn-success my-4">
    <a href="services/add" class="text-white text-decoration-none"
      >Add service</a
    >
  </button>
</div>
<div class="container">
  <table class="table table-bordered">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Image_url</th>
        <th scope="col">Description</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% services.forEach(function(service) { %>
      <tr>
        <td><%= service.name %></td>
        <td><%= service.image_url %></td>
        <td><%= service.description %></td>
        <td class="row">
          <button
            class="btn btn-info show-details text-white col-4"
            data-bs-toggle="modal"
            data-bs-target="#show-modal"
            data-title="<%= service.title %>"
            data-description="<%= service.description %>"
            data-img_url="<%= service.image_url %>"
            data-link_url="<%= service.link_url %>"
          >
            Show
          </button>
          <button class="btn btn-warning text-white col-4">
            <a
              href="services/edit/<%= service.id %>"
              class="text-white text-decoration-none"
              >Edit</a
            >
          </button>
          <button
            class="btn btn-danger text-white delete-service-button col-4"
            data-bs-toggle="modal"
            data-bs-target="#delete-modal-<%= service.id %>"
            data-project-id="<%= service.id %>"
          >
            Delete
          </button>
        </td>
      </tr>
      <% }); %>
    </tbody>
  </table>
</div>

<!-- Delete Confirmation Modals -->
<% services.forEach(function(service) { %>
<div
  class="modal fade"
  id="delete-modal-<%= service.id %>"
  tabindex="-1"
  aria-labelledby="deleteModalLabel-<%= service.id %>"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header bg-danger text-white">
        <h1 class="modal-title fs-5" id="deleteModalLabel-<%= service.id %>">
          Delete Confirmation
        </h1>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        <p>Are you sure you want to delete this service?</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
          Cancel
        </button>
        <a
          href="#"
          class="btn btn-danger delete-service"
          data-project-id="<%= service.id %>"
          >Confirm</a
        >
      </div>
    </div>
  </div>
</div>
<% }); %>

<!-- Show Modal -->
<div
  class="modal fade"
  id="show-modal"
  tabindex="-1"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header bg-warning-subtle">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Details</h1>
        <button
          type="button"
          class="btn btn-danger"
          data-bs-dismiss="modal"
          aria-label="Close"
        >
          X close
        </button>
      </div>
      <div class="modal-body">
        <p class="border-bottom py-2">
          <strong>Title:</strong> <span id="modalTitle"></span>
        </p>
        <p class="border-bottom py-2">
          <strong>Description:</strong> <span id="modalDescription"></span>
        </p>
        <p class="border-bottom py-2">
          <strong>Image URL:</strong> <span id="modalImgUrl"></span>
        </p>
      </div>
    </div>
  </div>
</div>

<!-- JavaScript for Modal Content -->
<script>
  document.addEventListener("DOMContentLoaded", function () {
    const modalTitle = document.getElementById("modalTitle");
    const modalDescription = document.getElementById("modalDescription");
    const modalImgUrl = document.getElementById("modalImgUrl");
    const modalLinkUrl = document.getElementById("modalLinkUrl");

    const showModalDetails = (title, description, img_url, link_url) => {
      modalTitle.textContent = title;
      modalDescription.textContent = description;
      modalImgUrl.textContent = img_url;
      modalLinkUrl.textContent = link_url;
    };

    const showDetailsButtons = document.querySelectorAll(".show-details");
    // Handle the click on
    showDetailsButtons.forEach(function (button) {
      button.addEventListener("click", function (event) {
        event.preventDefault(); // Prevent the link from navigating
        const title = this.getAttribute("data-title");
        const description = this.getAttribute("data-description");
        const img_url = this.getAttribute("data-img_url");
        const link_url = this.getAttribute("data-link_url");

        showModalDetails(title, description, img_url, link_url);
      });
    });

    const deleteButtons = document.querySelectorAll(".delete-service-button");
    const deleteServiceLinks = document.querySelectorAll(".delete-service");

    let serviceToDeleteId = null;

    // Handle the click on the "Delete" button to set the project ID
    deleteButtons.forEach(function (button) {
      button.addEventListener("click", function (event) {
        serviceToDeleteId = this.getAttribute("data-service-id");
        event.preventDefault(); // Prevent the link from navigating
      });
    });

    // Handle the click on the "Delete" link in the confirmation modal
    deleteServiceLinks.forEach(function (link) {
      link.addEventListener("click", function () {
        if (serviceToDeleteId) {
          // Send an AJAX request to delete the project
          fetch(`/services/delete/${serviceToDeleteId}`, {
            method: "DELETE",
          })
            .then((response) => response.json())
            .then((data) => {
              // Handle the response, e.g., show a success message or reload the page
              if (data.success) {
                location.reload(); // Reload the page to reflect the deleted project
              } else {
                alert("Failed to delete the services.");
              }
            });
        }

        // Manually close the delete confirmation modal
        const deleteModal = new bootstrap.Modal(
          document.getElementById(`delete-modal-${serviceToDeleteId}`)
        );
        deleteModal.hide();
      });
    });
  });
</script>

<%- include('../layout/footer.ejs') %>
