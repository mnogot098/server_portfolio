<%- include('../layout/header.ejs') %>
<div class="container">
  <h1 class="my-4 text-center">Manage certifications</h1>
</div>
<div class="container">
  <button class="btn btn-success my-4">
    <a href="certifications/add" class="text-white text-decoration-none"
      >Add certification</a
    >
  </button>
</div>
<div class="container">
  <table class="table table-bordered">
    <thead>
      <tr>
        <th scope="col">Title</th>
        <th scope="col">Image_url</th>
        <th scope="col">Link_url</th>
        <th scope="col">Description</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% certifications.forEach(function(certification) { %>
      <tr>
        <td><%= certification.title %></td>
        <td><%= certification.image_url %></td>
        <td><%= certification.link_url %></td>
        <td><%= certification.description %></td>
        <td class="row">
          <button
            class="btn btn-info show-details text-white col-4"
            data-bs-toggle="modal"
            data-bs-target="#show-modal"
            data-title="<%= certification.title %>"
            data-description="<%= certification.description %>"
            data-img_url="<%= certification.image_url %>"
            data-link_url="<%= certification.link_url %>"
          >
            Show
          </button>
          <button class="btn btn-warning text-white col-4">
            <a
              href="certifications/edit/<%= certification.id %>"
              class="text-white text-decoration-none"
              >Edit</a
            >
          </button>
          <button
            class="btn btn-danger text-white delete-certification-button col-4"
            data-bs-toggle="modal"
            data-bs-target="#delete-modal-<%= certification.id %>"
            data-certification-id="<%= certification.id %>"
          >
            Delete
          </button>
        </td>
      </tr>
      <% }); %>
    </tbody>
  </table>
</div>

<!-- Delete Confirmation Modals -->
<% certifications.forEach(function(certification) { %>
<div
  class="modal fade"
  id="delete-modal-<%= certification.id %>"
  tabindex="-1"
  aria-labelledby="deleteModalLabel-<%= certification.id %>"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header bg-danger text-white">
        <h1
          class="modal-title fs-5"
          id="deleteModalLabel-<%= certification.id %>"
        >
          Delete Confirmation
        </h1>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        <p>Are you sure you want to delete this certification?</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
          Cancel
        </button>
        <a
          href="#"
          class="btn btn-danger delete-certification"
          data-certification-id="<%= certification.id %>"
          >Confirm</a
        >
      </div>
    </div>
  </div>
</div>
<% }); %>

<!-- Show Modal -->
<div
  class="modal fade"
  id="show-modal"
  tabindex="-1"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header bg-warning-subtle">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Details</h1>
        <button
          type="button"
          class="btn btn-danger"
          data-bs-dismiss="modal"
          aria-label="Close"
        >
          X close
        </button>
      </div>
      <div class="modal-body">
        <p class="border-bottom py-2">
          <strong>Title:</strong> <span id="modalTitle"></span>
        </p>
        <p class="border-bottom py-2">
          <strong>Description:</strong> <span id="modalDescription"></span>
        </p>
        <p class="border-bottom py-2">
          <strong>Image URL:</strong> <span id="modalImgUrl"></span>
        </p>
        <p class="border-bottom py-2">
          <strong>Link URL:</strong> <span id="modalLinkUrl"></span>
        </p>
      </div>
    </div>
  </div>
</div>

<!-- JavaScript for Modal Content -->
<script>
  document.addEventListener("DOMContentLoaded", function () {
    const modalTitle = document.getElementById("modalTitle");
    const modalDescription = document.getElementById("modalDescription");
    const modalImgUrl = document.getElementById("modalImgUrl");
    const modalLinkUrl = document.getElementById("modalLinkUrl");

    const showModalDetails = (title, description, img_url, link_url) => {
      modalTitle.textContent = title;
      modalDescription.textContent = description;
      modalImgUrl.textContent = img_url;
      modalLinkUrl.textContent = link_url;
    };

    const showDetailsButtons = document.querySelectorAll(".show-details");
    // Handle the click on
    showDetailsButtons.forEach(function (button) {
      button.addEventListener("click", function (event) {
        event.preventDefault(); // Prevent the link from navigating
        const title = this.getAttribute("data-title");
        const description = this.getAttribute("data-description");
        const img_url = this.getAttribute("data-img_url");
        const link_url = this.getAttribute("data-link_url");

        showModalDetails(title, description, img_url, link_url);
      });
    });

    const deleteButtons = document.querySelectorAll(
      ".delete-certification-button"
    );
    const deleteProjectLinks = document.querySelectorAll(
      ".delete-certification"
    );

    let projectToDeleteId = null;

    // Handle the click on the "Delete" button to set the project ID
    deleteButtons.forEach(function (button) {
      button.addEventListener("click", function (event) {
        projectToDeleteId = this.getAttribute("data-certification-id");
        event.preventDefault(); // Prevent the link from navigating
      });
    });

    // Handle the click on the "Delete" link in the confirmation modal
    deleteProjectLinks.forEach(function (link) {
      link.addEventListener("click", function () {
        if (projectToDeleteId) {
          // Send an AJAX request to delete the project
          fetch(`/certifications/delete/${projectToDeleteId}`, {
            method: "DELETE",
          })
            .then((response) => response.json())
            .then((data) => {
              // Handle the response, e.g., show a success message or reload the page
              if (data.success) {
                location.reload(); // Reload the page to reflect the deleted project
              } else {
                alert("Failed to delete the certification.");
              }
            });
        }

        // Manually close the delete confirmation modal
        const deleteModal = new bootstrap.Modal(
          document.getElementById(`delete-modal-${projectToDeleteId}`)
        );
        deleteModal.hide();
      });
    });
  });
</script>

<%- include('../layout/footer.ejs') %>
